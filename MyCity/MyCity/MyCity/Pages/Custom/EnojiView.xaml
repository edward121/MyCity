<?xml version="1.0" encoding="UTF-8"?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
		x:Class="MyCity.EnojiView">
	<ContentView.Content>
		<StackLayout VerticalOptions = "CenterAndExpand" HeightRequest = "200" BackgroundColor = "#99d9ea">
			<Image Source = "close.png" VerticalOptions = "Start" HorizontalOptions = "End" WidthRequest = "25" HeightRequest = "25"/>
			<Grid VerticalOptions = "FillAndExpand" HorizontalOptions = "FillAndExpand" Padding = "10"  >
				<Grid.RowDefinitions>
					<RowDefinition Height = "1*"/>
					<RowDefinition Height = "1*"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width = "1*"/>
					<ColumnDefinition Width = "1*"/>
					<ColumnDefinition Width = "1*"/>
				</Grid.ColumnDefinitions>
				<StackLayout Grid.Row = "0" Grid.Column = "0">
					<Image Source = "cold_emoji.png" WidthRequest = "50" HeightRequest = "50"/>
					<Label Text = "ColdSweat"/>
				</StackLayout>
				<StackLayout  Grid.Row = "0" Grid.Column = "1">
					<Image Source = "crying_emoji.png" WidthRequest = "50" HeightRequest = "50"/>
					<Label Text = "CryingFace"/>
				</StackLayout>
				<StackLayout  Grid.Row = "0" Grid.Column = "2">
					<Image Source = "nerd_emoji.png" WidthRequest = "50" HeightRequest = "50"/>
					<Label Text = "NerdGlass"/>
				</StackLayout>
				<StackLayout Grid.Row = "1" Grid.Column = "0">
					<Image Source = "omg_emoji.png" WidthRequest = "50" HeightRequest = "50"/>
					<Label Text = "OMGFace"/>
				</StackLayout>
				<StackLayout  Grid.Row = "1" Grid.Column = "1">
					<Image Source = "love_emoji.png" WidthRequest = "50" HeightRequest = "50"/>
					<Label Text = "SmileFace"/>
				</StackLayout>
				<StackLayout Grid.Row = "1" Grid.Column = "2">
					<Image Source = "angry_emoji.png" WidthRequest = "50" HeightRequest = "50"/>
					<Label Text = "VeryAngry"/>
				</StackLayout>
			</Grid>
		</StackLayout>
	</ContentView.Content>
</pages:PopupPage>
